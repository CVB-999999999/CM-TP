<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:padding="8dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Titulo apelativo"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/titulo2"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@+id/titulo"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/titulo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Titulo"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Imagens"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:text="A primeira imagem é a foto principal do teu anúncio."
                android:textSize="12sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Descrição:"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/descr"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_below="@+id/desc"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/desc2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Descrição"
                    android:inputType="textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <TextView
                android:id="@+id/regras"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Regras"
                android:textSize="18sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/regra1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8"
                        android:layout_marginBottom="8dp"
                        android:text="Fumadores"
                        android:textSize="12sp" />
                    <CheckBox
                        android:id="@+id/check1"
                        android:layout_width="20dp"
                        android:layout_weight="1"
                        android:layout_height="20dp" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/regra2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:layout_marginBottom="8dp"
                    android:text="Animais"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/check2"
                    android:layout_width="20dp"
                    android:layout_weight="1"
                    android:layout_height="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/regra3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:layout_marginBottom="8dp"
                    android:text="Acessível"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/check3"
                    android:layout_width="20dp"
                    android:layout_weight="1"
                    android:layout_height="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/regra4"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/regras"
                    android:layout_weight="8"
                    android:layout_marginBottom="8dp"
                    android:text="Preço negociável"
                    android:textSize="12sp" />
                <CheckBox
                    android:id="@+id/check4"
                    android:layout_width="20dp"
                    android:layout_weight="1"
                    android:layout_height="20dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/dados"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Dados de contacto:"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dados1"
                android:layout_below="@+id/dados"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/dados2"
                android:layout_below="@+id/dados1"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="38dp">

                <EditText
                    android:id="@+id/tele"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telémovel"
                    android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <TextView
                android:id="@+id/local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Localização"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/local2"
                android:layout_below="@+id/local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Selecionar no mapa"
                android:textSize="14sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">
            <Button
                android:id="@+id/pre_visualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pré-Visualizar" />
            <Button
                android:id="@+id/publicar"
                android:layout_below="@+id/pre_visualizar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publicar" />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>